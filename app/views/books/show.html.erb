<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user:@user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book:@book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>

  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book_new.user) do %>
            <%= image_tag @book_new.user.get_profile_image, size:"100x100" %><br>
            <%= @book_new.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book_new.title, @book_new %></td>
          <td><%= @book_new.body %></td>





          <td>コメント数: <%= @book_new.book_comments.count %></td>

            <% if @user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book_new), class: "btn btn-sm btn-success" %></td>
            <% end %>
            <% if @user == current_user %>
            <td><%= link_to 'Destroy', @book_new, method: :delete, data: { confirm: '本当に消しますか？' },  class: "btn btn-sm btn-danger" %></td>
            <% end %>

           <table>
             <tbody>
              <% @book_new.book_comments.each do |book_comment| %>
                <tr>
                  <td>
                    <%= link_to user_path(book_comment.user) do %>
                    <%= image_tag book_comment.user.get_profile_image, size: "100x100" %><br>
                    <%= book_comment.user.name %>
                    <% end %>
                  </td>

                  <td><%= book_comment.comment %></td>

                  <td>
                    <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_book_comment_path(@book_new, book_comment), method: :delete  %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="new-comment">

            <td>
  <%#          <%= form_with model: [@book, @book_comment] do |f| %>
  <%#          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %>
  <%#          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <%#          <% end %>
            </td>

          <div id="comments_area">
            <%= render 'book_comments/book_comments', user: @user, book_new: @book_new %>
          </div>

            <div class="new-comment">
            <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
          </div>


      </table>
    </div>
  </div>
</div>